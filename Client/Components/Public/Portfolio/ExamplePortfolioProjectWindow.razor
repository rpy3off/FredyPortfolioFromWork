                            <button type="button" data-bs-target="#carouselWithIndicator" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselWithIndicator" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>

                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <a href="assets/img/publicbackgrounds/bg-motherboard-dev.jpg" target="_blank">
                                     <img src="assets/img/publicbackgrounds/bg-motherboard-dev.jpg" class="d-block w-100" alt="Portfolio Project carousel image"/>
                                 </a>
                            </div>

                            <div class="carousel-item">
                                <a href="assets/img/publicbackgrounds/bg-motherboard.jpg" target="_blank">
                                     <img src="assets/img/publicbackgrounds/bg-motherboard.jpg" class="d-block w-100" alt="Portfolio Project carousel image"/>
                                 </a>
                            </div>

                            <div class="carousel-item">
                                <a href="assets/img/publicbackgrounds/bg-motherboard.jpg" target="_blank">
                                     <img src="assets/img/publicbackgrounds/bg-motherboard-dev.jpg" class="d-block w-100" alt="Portfolio Project carousel image"/>
                                 </a>
                            </div>
                        </div>

                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselWithIndicator" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>

                         <button class="carousel-control-next" type="button" data-bs-target="#carouselWithIndicator" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
